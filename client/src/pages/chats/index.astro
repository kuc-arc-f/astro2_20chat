import Layout from '../../layouts/Layout.astro';
import CrudIndex from './CrudIndex';

console.log("#index");
const taskList = await CrudIndex.getList();
console.log(taskList);
---

<Layout title="Welcome to Astro.">
	<main class="container">
		<a href={`/chats/create`} class="btn btn-primary">Create</a>
		<hr />
		<h1>Chats</h1>
		<hr />
		<ul>
		{
		taskList.map((item) => (
			<li><h3>{item.name}</h3>
				ID: {item.id}
				<a href={`/chats/show/${item.id}`} class="btn btn-sm btn-outline-primary"
				>Show</a>
				<hr />
			</li>
		))
		}
		</ul>		
	</main>
</Layout>
